<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grayBackground"
    android:orientation="vertical">

    <com.tianbao.addictionsport.widget.banner.Banner
        android:id="@+id/banner"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="120dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_day_1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="一"
            android:gravity="center"
            android:textSize="14sp"
            android:background="@drawable/tab_day_select_background"
            android:textColor="@color/wordBlackColor"/>

        <TextView
            android:id="@+id/text_day_2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="二"
            android:gravity="center"
            android:textSize="14sp"
            android:background="@drawable/tab_day_no_select_background"
            android:textColor="@color/wordBlackColor"/>

        <TextView
            android:id="@+id/text_day_3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="三"
            android:gravity="center"
            android:textSize="14sp"
            android:background="@drawable/tab_day_no_select_background"
            android:textColor="@color/wordBlackColor"/>

        <TextView
            android:id="@+id/text_day_4"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="四"
            android:gravity="center"
            android:textSize="14sp"
            android:background="@drawable/tab_day_no_select_background"
            android:textColor="@color/wordBlackColor"/>

        <TextView
            android:id="@+id/text_day_5"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="五"
            android:gravity="center"
            android:textSize="14sp"
            android:background="@drawable/tab_day_no_select_background"
            android:textColor="@color/wordBlackColor"/>

        <TextView
            android:id="@+id/text_day_6"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="六"
            android:gravity="center"
            android:textSize="14sp"
            android:background="@drawable/tab_day_no_select_background"
            android:textColor="@color/wordBlackColor"/>

        <TextView
            android:id="@+id/text_day_7"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="日"
            android:gravity="center"
            android:textSize="14sp"
            android:background="@drawable/tab_day_no_select_background"
            android:textColor="@color/wordBlackColor"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="34dp">

        <TextView
            android:id="@+id/text_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="长沙岳麓瘾健身店"
            android:textSize="14sp"
            android:textColor="@color/wordBlackColor"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/text_map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查看地图"
            android:drawablePadding="5dp"
            android:drawableRight="@mipmap/right"
            android:textSize="12sp"
            android:textColor="@color/gray"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

</LinearLayout>