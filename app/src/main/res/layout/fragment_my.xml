<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    android:background="@color/grayBackground"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="4dp">

        <!--运动数据-->
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:layout_marginTop="4dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <LinearLayout
                    android:id="@+id/view_sport_data"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/text_calorie"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="12.1"
                            android:textColor="@color/blue"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:textStyle="bold"
                            android:textSize="16sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="总消耗（千卡）"
                            android:textColor="@color/gray"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:textSize="14sp"/>

                    </LinearLayout>

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/text_duration_week"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="12"
                            android:textColor="@color/blue"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:textStyle="bold"
                            android:textSize="16sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="本周运动/小时"
                            android:textColor="@color/gray"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:textSize="14sp"/>

                    </LinearLayout>

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/text_duration_int"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="12"
                                android:textColor="@color/blue"
                                android:singleLine="true"
                                android:ellipsize="end"
                                android:textStyle="bold"
                                android:textSize="16sp"/>

                            <TextView
                                android:id="@+id/text_duration_fractional"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1/4"
                                android:textColor="@color/blue"
                                android:layout_marginLeft="3dp"
                                android:singleLine="true"
                                android:ellipsize="end"
                                android:textSize="14sp"/>

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="总运动/小时"
                            android:textColor="@color/gray"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:textSize="14sp"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="27dp"
                    android:layout_below="@id/view_sport_data"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="您已经超过"
                        android:textColor="@color/gray"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/text_beyond"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="80%"
                        android:textColor="@color/blue"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:textSize="16sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="同时健身的同学"
                        android:textColor="@color/gray"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:textSize="14sp"/>

                </LinearLayout>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <!--我的瘾卡-->
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:clickable="true"
                android:background="@drawable/card_background"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的瘾卡"
                    android:textColor="@color/wordBlackColor"
                    android:drawableLeft="@mipmap/image_class_content"
                    android:drawablePadding="4dp"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/text_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:drawableRight="@mipmap/right"
                    android:drawablePadding="10dp"
                    android:text="￥600"
                    android:textColor="@color/blue"
                    android:textSize="16sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="总额："
                    android:layout_toLeftOf="@id/text_total"
                    android:textColor="@color/wordBlackColor"
                    android:textSize="16sp"/>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <!--购买记录-->
        <android.support.v7.widget.CardView
            android:id="@+id/view_purchase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:gravity="center_vertical"
                    android:clickable="true"
                    android:background="@drawable/card_background"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="购买记录"
                        android:textColor="@color/wordBlackColor"
                        android:drawableLeft="@mipmap/image_class_content"
                        android:drawablePadding="4dp"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/text_more"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:drawableRight="@mipmap/right"
                        android:drawablePadding="10dp"
                        android:text="查看更多记录"
                        android:textColor="@color/gray"
                        android:textSize="15sp"/>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="10dp"
                    android:background="#eee"/>

                <!--点击可查看课程详情-->
                <RelativeLayout
                    android:id="@+id/view_courses"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:background="@drawable/card_background"
                    android:padding="10dp">

                    <ImageView
                        android:id="@+id/image_cover"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:src="@mipmap/image_sport_head"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@id/image_cover"
                        android:layout_marginLeft="8dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/text_state"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="【预约中】"
                                android:textColor="@color/blue"
                                android:textSize="16sp"/>

                            <TextView
                                android:id="@+id/text_courses_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="反重力瑜伽"
                                android:textColor="@color/wordBlackColor"
                                android:singleLine="true"
                                android:ellipsize="end"
                                android:textSize="16sp"/>

                        </LinearLayout>

                        <TextView
                            android:id="@+id/text_courses_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="地   址：长沙大学城店"
                            android:textColor="@color/wordBlackColor"
                            android:singleLine="true"
                            android:layout_marginTop="7dp"
                            android:layout_marginBottom="4dp"
                            android:textSize="14sp"/>

                        <TextView
                            android:id="@+id/text_courses_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="时   间：2017-8-7 18:10-19:10"
                            android:singleLine="true"
                            android:textColor="@color/wordBlackColor"
                            android:layout_marginBottom="4dp"
                            android:textSize="14sp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/text_courses_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="实付款： ￥19.9"
                                android:textColor="@color/wordBlackColor"
                                android:singleLine="true"
                                android:ellipsize="end"
                                android:textSize="14sp"/>

                            <TextView
                                android:id="@+id/text_courses_num"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="【2人】"
                                android:layout_marginLeft="2dp"
                                android:textColor="@color/wordBlackColor"
                                android:singleLine="true"
                                android:ellipsize="end"
                                android:visibility="visible"
                                android:textSize="14sp"/>

                        </LinearLayout>

                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <!--我的积分、礼券-->
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!--积分-->
                <RelativeLayout
                    android:id="@+id/view_integral"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="我的积分"
                        android:textColor="@color/wordBlackColor"
                        android:drawableLeft="@mipmap/image_class_content"
                        android:drawablePadding="4dp"
                        android:textSize="16sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:drawablePadding="10dp"
                        android:text="900"
                        android:textColor="@color/wordBlackColor"
                        android:textSize="16sp"/>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="10dp"
                    android:background="#eee"/>

                <!--礼券-->
                <RelativeLayout
                    android:id="@+id/view_coupon"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:clickable="true"
                    android:background="@drawable/card_background"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="我的礼券"
                        android:textColor="@color/wordBlackColor"
                        android:drawableLeft="@mipmap/image_class_content"
                        android:drawablePadding="4dp"
                        android:textSize="16sp"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:background="@mipmap/right"/>

                </RelativeLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <!--其他-->
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:layout_marginBottom="4dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!--常见问题-->
                <RelativeLayout
                    android:id="@+id/view_problem"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:clickable="true"
                    android:background="@drawable/card_background"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="常见问题"
                        android:textColor="@color/wordBlackColor"
                        android:drawableLeft="@mipmap/image_class_content"
                        android:drawablePadding="4dp"
                        android:textSize="16sp"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:background="@mipmap/right"/>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="10dp"
                    android:background="#eee"/>

                <!--关于瘾店-->
                <RelativeLayout
                    android:id="@+id/view_about"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:clickable="true"
                    android:background="@drawable/card_background"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="关于瘾店"
                        android:textColor="@color/wordBlackColor"
                        android:drawableLeft="@mipmap/image_class_content"
                        android:drawablePadding="4dp"
                        android:textSize="16sp"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:background="@mipmap/right"/>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="10dp"
                    android:background="#eee"/>

                <!--加入瘾店-->
                <RelativeLayout
                    android:id="@+id/view_join"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:clickable="true"
                    android:background="@drawable/card_background"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="加入瘾店"
                        android:textColor="@color/wordBlackColor"
                        android:drawableLeft="@mipmap/image_class_content"
                        android:drawablePadding="4dp"
                        android:textSize="16sp"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:background="@mipmap/right"/>

                </RelativeLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</ScrollView>
