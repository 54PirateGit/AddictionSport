<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="102dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="10dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:descendantFocusability="blocksDescendants">

        <ImageView
            android:id="@+id/image_cover"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginLeft="8dp"
            android:src="@mipmap/image_sport_head"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/btn_purchase"
            android:layout_width="53dp"
            android:layout_height="30dp"
            android:background="@drawable/btn_blue_white_background"
            android:text="预约"
            android:textColor="@color/blue"
            android:textSize="15sp"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:layout_marginRight="8dp"
            android:layout_centerVertical="true"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/image_cover"
            android:layout_toLeftOf="@id/btn_purchase"
            android:gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_courses"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="哈他瑜伽"
                android:textColor="@color/black"
                android:singleLine="true"
                android:ellipsize="end"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/text_courses_key"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="瑜伽 瑜伽"
                android:textColor="@color/gray"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp"
                android:textSize="13sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_courses_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="07:30-08:30 ￥45"
                    android:textColor="@color/gray"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textSize="10sp"/>

                <TextView
                    android:id="@+id/text_courses_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="（瘾卡￥40.25）"
                    android:layout_marginLeft="2dp"
                    android:textColor="@color/blue"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textSize="10sp"/>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>